@using WebsiteLinhKienLocNuoc.Models;
@model List<Review>
@{
    ViewBag.Title = "MyComment";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="main-container container">
    <ul class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i></a></li>
        <li><a href="#">Đổi Mật Khẩu</a></li>

    </ul>
    <div class="row">
        <!--Left Part Start -->
        <aside class="col-sm-4 col-md-3" id="column-left"> 
            <div class="module blog-category titleLine">
                <h3 class="modtitle">Danh Mục</h3>
                <div class="modcontent">
                    <ul class="list-group ">
                        <li class="list-group-item"> <a href="/Account/MyAccount" class="group-item">Thông Tin Tài Khoản</a></li>
                        <li class="list-group-item"><a href="/Order/OrderHistory" class="group-item">Lịch Sử Mua Hàng</a></li>
                        <li class="list-group-item"><a href="/Account/MyComment" class="group-item">Đánh Giá Của Tôi</a></li>
                        <li class="list-group-item"><a href="/Account/ChangedPassword" class="group-item">Đổi Mật Khẩu</a></li>
                        <li class="list-group-item"><a href="/Account/Logout" class="group-item">Đăng Xuất</a></li>
                    </ul>

                </div>
            </div>
        </aside>
        <!--Left Part End -->
        <!--Middle Part Start-->
        <div id="content" class="col-md-9 col-sm-8 ">
            @foreach (var item in Model)
            {
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <td style="width: 50%;"><strong>@item.Customer.FirstName @item.Customer.LastName</strong></td>
                            <td class="text-right">@String.Format("{0:d/M/yyyy HH:mm:ss}", item.DateAdded)</td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <p>@item.Comment</p>
                                <div class="ratings">
                                    <div class="rating-box">
                                        @for (int i = 1; i <= item.NumStar; i++)
                                        {
                                            <span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>
                                        }
                                        @for (int i = ((int)item.NumStar) + 1; i <= 5; i++)
                                        {
                                            <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-1x"></i></span>
                                        }

                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            }
        </div>
    </div>
    <!--Middle Part End-->
</div>

