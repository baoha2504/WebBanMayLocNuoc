@{

    Layout = null;
}

@if (Message.has_flash())
{
    MessageModel ms = Message.get_flash();
    <div class="alertContainer position-fixed col-sm-12" style="z-index:10000; left:0; bottom:0;">
        <div class="alert1 ">
            <div class="icon @ms.msg_css col-sm-2">
                <i class="fa fa-check-circle"></i> 
            </div>
            <div class="text col-sm-8">
                <span>@ms.msg<span>
            </div>
            <div class="col-sm-2">

            </div>
        </div>
    </div>
}
<!-- custom alert ajax-->
<div id="custom-alert-ajax" class="alertContainer position-fixed col-sm-12" style="z-index:10000; left:0; bottom:0; display:none;">
    <div class="alert1 col-sm-2">
        <div id="alert-class" class="icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="text col-sm-8">
            <span id="alert-mess"><span>
        </div>
        <div class="col-sm-2">

        </div>
    </div>
</div>

<script>
    //$("#messageAlert").hide();
    setTimeout(function () {
        $(".alertContainer").fadeOut("slow");
    }, 5000);
</script>
<style>
    .success {
        color: #4cd137;
    }

    .error {
        color: #e84118;
    }

    .warning {
        color: #fbc531;
    }

    .alertContainer {
        width: 350px;
        height: 500px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        z-index: 200;
    }

    .alert1 {
        width: 100%;
        height: 80px;
        background-color: #f5f6fa;
        border-radius: 2px;
        display: flex;
        flex-direction: row;
        align-items: center;
        -webkit-box-shadow: 0px 0px 15px 0px rgba(0,0,0,0.75);
        -moz-box-shadow: 0px 0px 15px 0px rgba(0,0,0,0.75);
        box-shadow: 0px 0px 15px 0px rgba(0,0,0,0.75);
    }

    .icon {
        display: flex;
        align-items: center;
        font-size: 40px;
        border-left: 7px solid;
        height: 100%;
        padding-right: 20px;
    }
</style>