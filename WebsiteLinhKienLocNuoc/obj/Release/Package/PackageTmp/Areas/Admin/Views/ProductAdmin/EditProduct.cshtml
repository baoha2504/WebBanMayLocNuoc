@using WebsiteLinhKienLocNuoc.Models;
@model List<SubCategory>
@{
     ViewBag.Title = "EditProduct";
     Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
     var product = (Product)ViewBag.product;
}

    <div class="content-page">
        <!-- Start content -->
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="mt-0 header-title">Thêm Mới Sản Phẩm</h4>
                                <form method="post" action="/Admin/ProductAdmin/EditProduct" enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group row hidden">
                                                <label for="example-text-input" class="col-sm-3 col-form-label">Mã Sản Phẩm</label>
                                                <div class="col-sm-9">
                                                    <input class="form-control" name="id" type="text" placeholder="Nhãn Hiệu" id="example-text-input" value="@product.ProductID" required>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-text-input" class="col-sm-3 col-form-label">Tên Sản Phẩm</label>
                                                <div class="col-sm-9">
                                                    <input class="form-control" type="text" placeholder="Tên Sản Phẩm" id="example-text-input" name="productname" value="@product.ProductName" required>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Loại Sản Phẩm</label>
                                                <div class="col-sm-9">
                                                    <select name="subcate" class="form-control">
                                                        <option value="@product.SubCategoriesID">@product.SubCategory.SubCategoriesName</option>
                                                        @foreach (var item in Model)
                                                        {
                                                            <option value="@item.SubCategoriesID">@item.SubCategoriesName</option>

                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-text-input" class="col-sm-3 col-form-label">Nhãn Hiệu</label>
                                                <div class="col-sm-9">
                                                    <input class="form-control" name="brand" type="text" placeholder="Nhãn Hiệu" id="example-text-input" value="@product.Brand" required>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-text-input" class="col-sm-3 col-form-label">Model</label>
                                                <div class="col-sm-9">
                                                    <input class="form-control" name="model" type="text" placeholder="Model" id="example-text-input" value="@product.Model" required>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-text-input" class="col-sm-3 col-form-label">Nhà Cung Cấp</label>
                                                <div class="col-sm-9">
                                                    <input class="form-control" name="suppiler" type="text" placeholder="Nhà Cung Cấp" id="example-text-input" value="@product.Suppiler" required>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-number-input" class="col-sm-2 col-form-label">Giá Bán</label>
                                                <div class="col-sm-4">
                                                    <input class="form-control" name="pricenew" type="text" id="example-text-input" value="@String.Format("{0:0,0}", product.PriceNew)" data-type="currency" placeholder="1,000,000">
                                                </div>
                                                <label for="example-number-input" class="col-sm-2 col-form-label">Giá Gốc</label>
                                                <div class="col-sm-4">
                                                    <input class="form-control" name="priceold" type="text" id="example-text-input" value="@String.Format("{0:0,0}", product.PriceOld)" data-type="currency" placeholder="1,000,000">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-text-input-sm" class="col-sm-2 col-form-label">Tóm Tắt</label>
                                                <div class="col-sm-10">
                                                    <textarea required name="summary" class="form-control" rows="5" value="">@product.Summary</textarea>
                                                </div>
                                            </div>
                                            <div class="m-b-30">

                                                <div class="fallback">
                                                    <input name="file" type="file" id="file" multiple="multiple" onchange="readURL(this);">
                                                    <div>
                                                        <img src="/Public/image/demo/@product.Image" id="image" title="@product.ProductName" alt="@product.ProductName" style="width:300px;height:300px;" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div>
                                                <textarea id="elm1" name="area" value="">@product.Description</textarea>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-date-input" class="col-sm-3 col-form-label">Ngày Thêm</label>
                                                <div class="col-sm-9">
                                                    <input class="form-control" type="date" value="@String.Format("{0:yyyy-MM-dd}", product.DateAdded)" id="example-date-input">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">

                                        <div class="col-sm-5">
                                        </div>
                                        <div class="col-sm-4">
                                            <button type="submit" class="btn btn-pink waves-effect waves-light">
                                                Lưu
                                            </button>
                                            
                                        </div>

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row -->

            </div>
            <!-- container-fluid -->
        </div>
        <!-- content -->

    </div>
<script>
    window.onload = function () {
        if($("#elm1").length > 0){
            tinymce.init({
                selector: "textarea#elm1",
                theme: "modern",
                height:300,
                plugins: [
                    "advlist autolink link image lists charmap print preview hr anchor pagebreak spellchecker",
                    "searchreplace wordcount visualblocks visualchars code fullscreen insertdatetime media nonbreaking",
                    "save table contextmenu directionality emoticons template paste textcolor"
                ],
                toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | l      ink image | print preview media fullpage | forecolor backcolor emoticons",
                style_formats: [
                    {title: 'Bold text', inline: 'b'},
                    {title: 'Red text', inline: 'span', styles: {color: '#ff0000'}},
                    { title: 'Red header', block: 'h1', styles: { color: '#ff0000' } },
                    { title: 'Red header', block: 'h2', styles: { color: '#ff0000' } },
                    { title: 'Red header', block: 'h3', styles: { color: '#ff0000' } },
                    { title: 'Black header', block: 'h1', styles: { color: '#000000' } },
                    { title: 'Black header', block: 'h2', styles: { color: '#000000' } },
                    {title: 'Black header', block: 'h3', styles: {color: '#000000'}}
                ]
            });
        }
        if ("@ViewBag.alert" != "") {
            alertify.success("@ViewBag.alert");
        }
    }
    
    function readURL(input) {
        
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#image')
                        .attr('src', e.target.result);
                };
                reader.readAsDataURL(input.files[0]);
            }
    }
    
</script>