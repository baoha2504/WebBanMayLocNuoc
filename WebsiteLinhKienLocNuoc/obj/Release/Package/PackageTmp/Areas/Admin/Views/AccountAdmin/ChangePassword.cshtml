
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<div class="wrapper-page">
    <!-- Start content -->

    <div class="card">
        <div class="card-body">

            <div class="p-3">

                <form class="form-horizontal m-t-10" method="post" action="/Admin/AccountAdmin/ChangePassword">

                    <div class="form-group">
                        <label for="userpassword">Mật Khẩu Cũ</label>
                        <input type="password" class="form-control" name="userpassword" placeholder="Enter password" required>
                    </div>
                    <div class="form-group">
                        <label>Mật Khẩu Mới</label>
                        <div>
                            <input type="password" name="newpassword" id="pass2" class="form-control" required
                                   placeholder="Password" />
                        </div>
                        <div class="m-t-10">
                            <input type="password" class="form-control" required
                                   data-parsley-equalto="#pass2"
                                   placeholder="Re-Type Password" />
                        </div>
                    </div>
                    <div class="form-group row m-t-30">
                        <div class="col-sm-12 text-center">
                            <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Lưu </button>
                        </div>
                    </div>

                </form>
            </div>

        </div>
    </div>

    <!-- content -->

</div>
<script>
    window.onload = function () {
        if ("@ViewBag.alert" != "") {
            alertify.success("@ViewBag.alert");
        }
         if ("@ViewBag.danger" != "") {
            alertify.error("@ViewBag.danger");
        }
    }
</script>