
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
    var orders = (List<WebsiteLinhKienLocNuoc.Models.Order>)ViewBag.orders;
    var orderstatuses = (List<WebsiteLinhKienLocNuoc.Models.OrderStatusHistory>)ViewBag.orderstatuses;
}

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="mt-0 header-title">Danh Sách Đơn Hàng</h4>
                            <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">

                                <thead>
                                    <tr> 
                                        <th>#Mã Đơn</th>
                                        <th>Tên Khách Hàng</th>
                                        <th>Số điện thoại</th>
                                        <th>Ngày Mua</th>
                                        <th>Trạng Thái</th>
                                        <th>Tổng Tiên</th>
                                        <th></th>
                                    </tr>
                                </thead>


                                <tbody>

                                    @for (int i = 0; i < orders.Count; i++)
                                    {
                                        <tr>
                                            <td scope="row">
                                                @orders[i].OrderID
                                                <a href="/Admin/OrderAdmin/EditOrder?orderid=@orders[i].OrderID"><i class="ion-edit"></i></a>
                                            </td>
                                            <td>
                                                @orders[i].Name
                                            </td>
                                            <td>
                                                @orders[i].Phone
                                            </td>
                                            <td>@String.Format("{0:d/M/yyyy HH:mm:ss}", orders[i].DateAdd)</td>
                                            @if (@orderstatuses[i].OrderStatusName == "Đang Chờ Xác Nhận")
                                            {
                                                <td><span class="badge badge-warning">@orderstatuses[i].OrderStatusName</span></td>
                                            }
                                            else if (@orderstatuses[i].OrderStatusName == "Đang Giao Hàng")
                                            {
                                                <td><span class="badge badge-success">@orderstatuses[i].OrderStatusName</span></td>
                                            }
                                            else if (@orderstatuses[i].OrderStatusName == "Đã Hủy")
                                            {
                                                <td><span class="badge badge-danger">@orderstatuses[i].OrderStatusName</span></td>
                                            }
                                            else
                                            {
                                                <td><span class="badge badge-success">@orderstatuses[i].OrderStatusName</span></td>
                                            }

                                            <td>@String.Format("{0:0,0}", orders[i].Total)</td>
                                            <td>
                                                <div>
                                                    <button type="button" class="btn btn-primary waves-effect waves-light" onclick="updatestatus('@orders[i].OrderID');">Cập Nhật</button>
                                                </div>
                                            </td>
                                        </tr>
                                    }

                                </tbody>

                            </table>

                        </div>
                    </div>
                </div>

            </div> <!-- end row -->

        </div>
        <!-- container-fluid -->

    </div>
    <!-- content -->

</div>
<script>

    window.onload = function () {
        var table1 = $('#datatable-buttons').DataTable();
        // Sort by columns 1 and 2 and redraw
        table1
            .order([[0, 'desc']])
            .draw();
    };
    function updatestatus(id) {
        swal({
            title: 'Cập Nhật Trạng Thái Đơn Hàng',
            input: 'select',
            inputOptions: { 'Đã Xác Nhận': 'Đã Xác Nhận', 'Đang Giao Hàng': 'Đang Giao Hàng', 'Đã Giao Hàng': 'Đã Giao Hàng', 'Đã Hủy': 'Đã Hủy' },
            confirmButtonText: 'Xác Nhận',
            showLoaderOnConfirm: true,
            confirmButtonClass: 'btn btn-success',
            cancelButtonClass: 'btn btn-danger m-l-10',
            allowOutsideClick: true

        }).then(function (result) {
            $.ajax({
                url: '/Admin/OrderAdmin/UpdateStatus/',
                dataType: 'json',
                data: { id: id, status: result },
                type: 'POST',
                success: function (response) {
                    if (response.status == true) {
                        swal({
                            title: 'Thành công!',
                            text: 'Cập nhật thành công.',
                            type: 'success'
                        }).then(function () {
                            window.location.reload();
                        })
                    }
                    else {
                        swal({
                            title: 'Không thành công!',
                            text: 'Đã xảy ra lỗi.',
                            type: 'success'
                        })
                    }
                }
            });

        })
    };
</script>

