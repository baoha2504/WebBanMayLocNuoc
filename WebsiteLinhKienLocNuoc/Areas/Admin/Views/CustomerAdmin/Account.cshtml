@using WebsiteLinhKienLocNuoc.Models;
@model List<Customer>
@{
    ViewBag.Title = "Account";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}
<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body"> 
                            <h4 class="mt-0 header-title">Danh Sách Khách Hàng</h4>
                            <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">

                                <thead>
                                    <tr>
                                        <th>Mã Khách Hàng</th>
                                        <th>Email</th>
                                        <th>Quyền</th>
                                        <th>Trạng Thái </th>
                                        <th>Thao Tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.CustomerID</td>
                                            <td>@item.Email</td>
                                            @if (item.Access == 1)
                                            {
                                                <td><span class="badge badge-success">Admin</span></td>
                                            }
                                            else if (item.Access == 2)
                                            {
                                                <td><span class="badge badge-primary">Nhân Viên</span></td>
                                            }
                                            else if (item.Access == 3)
                                            {
                                                <td><span class="badge badge-warning">Khách Hàng</span></td>
                                            }

                                            @if (item.Prohibit == 1)
                                            {
                                                <td><span class="badge badge-success">Đang Sử Dụng</span></td>
                                            }
                                            else if (item.Prohibit == 2)
                                            {
                                                <td><span class="badge badge-danger">Bị Cấm Sử Dụng</span></td>
                                            }
                                            <td>
                                                <div>
                                                    <button type="button" class="btn btn-primary waves-effect waves-light" data-toggle="modal" data-target=".bs-update-modal-center-@item.CustomerID">Sửa</button>
                                                    <div class="modal fade bs-update-modal-center-@item.CustomerID" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog modal-dialog-centered">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title mt-0">Sửa Danh Mục</h5>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <form action="/Admin/CustomerAdmin/Edit">
                                                                        <div class="form-group row hidden">
                                                                            <label for="example-number-input" class="col-sm-4 col-form-label">Mã Tài Khoản</label>
                                                                            <div class="col-sm-8">
                                                                                <input class="form-control" type="number" name="idcustomer" id="text-input" value="@item.CustomerID" placeholder="Mã Tài Khoản" readonly>
                                                                            </div>
                                                                        </div>
                                                                        <div class="form-group row">
                                                                            <label for="example-number-input" class="col-sm-4 col-form-label">Quyền </label>
                                                                            <div class="col-sm-8">
                                                                                <select class="form-control" name="access">
                                                                                    <option value="1">Admin</option>
                                                                                    <option value="2">Nhân Viên</option>
                                                                                    <option value="3">Khách Hàng</option>
                                                                                </select>
                                                                            </div>
                                                                        </div>
                                                                        <div class="form-group row">
                                                                            <label for="example-number-input" class="col-sm-4 col-form-label">Trạng Thái</label>
                                                                            <div class="col-sm-8">
                                                                                <select class="form-control" name="prohibit">
                                                                                    <option value="1">Đang Sử Dụng</option>
                                                                                    <option value="2">Cấm Sử Dụng</option>
                                                                                </select>
                                                                            </div>
                                                                        </div>
                                                                        <div class="form-group row">
                                                                            <div class="col-sm-5"></div>
                                                                            <div class="col-sm-7 ">
                                                                                <button type="submit" class="btn btn-success waves-effect waves-light">Lưu</button>
                                                                            </div>
                                                                        </div>
                                                                    </form>
                                                                </div>
                                                            </div><!-- /.modal-content -->
                                                        </div><!-- /.modal-dialog -->
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>

                        </div>
                    </div>
                </div>

            </div> <!-- end row -->

        </div>
        <!-- container-fluid -->

    </div>
    <!-- content -->

</div>
