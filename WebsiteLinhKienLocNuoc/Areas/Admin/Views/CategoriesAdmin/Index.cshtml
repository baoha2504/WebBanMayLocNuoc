@using WebsiteLinhKienLocNuoc.Models;
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row"> 
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <button type="button" class="btn btn-success waves-effect waves-light" data-toggle="modal" data-target=".bs-example-modal-center"><i class="ion-plus-circled"></i>&ensp;Thêm Danh Mục</button>
                            <div class="modal fade bs-example-modal-center" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title mt-0">Thêm Danh Mục</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/Admin/CategoriesAdmin/Add">
                                                <div class="form-group row">
                                                    <label for="example-number-input" class="col-sm-3 col-form-label">Tên Danh Mục</label>
                                                    <div class="col-sm-9">
                                                        <input class="form-control" type="text" name="namecategory" id="text-input" placeholder="Tên Danh Mục">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <div class="col-sm-5"></div>
                                                    <div class="col-sm-7 ">
                                                        <button type="submit" class="btn btn-success waves-effect waves-light">Thêm</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div><!-- /.modal-content -->
                                </div><!-- /.modal-dialog -->
                            </div>
                            <h4 class="mt-0 header-title">Danh Sách Danh Mục</h4>
                            <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">

                                <thead>
                                    <tr>
                                        <th>Mã Danh Mục</th>
                                        <th>Tên Danh Mục</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.CategoriesID </td>
                                            <td>
                                                @item.CategoriesName
                                            </td>
                                            <td>
                                                <div>
                                                    <button type="button" class="btn btn-primary waves-effect waves-light" data-toggle="modal" data-target=".bs-update-modal-center-@item.CategoriesID">Sửa</button>
                                                    <div class="modal fade bs-update-modal-center-@item.CategoriesID" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog modal-dialog-centered">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title mt-0">Sửa Danh Mục</h5>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <form action="/Admin/CategoriesAdmin/Edit">
                                                                        <div class="form-group row hidden">
                                                                            <label for="example-number-input" class="col-sm-3 col-form-label">Mã Danh Mục</label>
                                                                            <div class="col-sm-9">
                                                                                <input class="form-control" type="number" name="idcategory" id="text-input" value="@item.CategoriesID" placeholder="Mã Danh Mục" readonly>
                                                                            </div>
                                                                        </div>
                                                                        <div class="form-group row">
                                                                            <label for="example-number-input" class="col-sm-3 col-form-label">Tên Danh Mục</label>
                                                                            <div class="col-sm-9">
                                                                                <input class="form-control" type="text" name="namecategory" id="text-input" value="@item.CategoriesName" placeholder="Tên Danh Mục">
                                                                            </div>
                                                                        </div>
                                                                        <div class="form-group row">
                                                                            <div class="col-sm-5"></div>
                                                                            <div class="col-sm-7 ">
                                                                                <button type="submit" class="btn btn-success waves-effect waves-light">Lưu</button>
                                                                            </div>
                                                                        </div>
                                                                    </form>
                                                                </div>
                                                            </div><!-- /.modal-content -->
                                                        </div><!-- /.modal-dialog -->
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>

                        </div>
                    </div>
                </div>

            </div> <!-- end row -->

        </div>
        <!-- container-fluid -->

    </div>
    <!-- content -->

</div>
<script>

</script>


